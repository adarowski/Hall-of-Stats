source 'https://rubygems.org'

gem 'rails', '3.2.8'

gem 'thin'

gem 'pg'
gem 'haml'
gem 'redcarpet'

gem 'draper'
gem 'nokogiri'

gem 'activeadmin'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'compass-rails'

  gem 'uglifier', '>= 1.0.3'
end

gem 'stamp'

gem 'jquery-rails'

group :development, :test do
  gem 'debugger'
  gem "rspec-rails", "~> 2.0"
end

group :test do
  gem 'factory_girl_rails'
  gem 'fuubar'
  gem 'guard'
  gem 'guard-rspec'
  gem 'listen', git: 'git://github.com/guard/listen.git'
  gem 'rb-fsevent'
end
