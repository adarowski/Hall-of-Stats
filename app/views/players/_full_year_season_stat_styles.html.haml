- season_stats.each do |year, ss|
  :sass
    $bad_color: #900
    $max_width: 300
    =year_bar($war, $waa)
      .innerWrapper
        &:before
          @if $war > 0
            $width: ($war / 20.0) * $max_width * 1%
            width: $width
          @else
            $width: (abs($war) / 20.0) * $max_width * 1%
            width: $width
            left: 100% - $width
            border-radius: 4px 0 0 4px
            background-color: fade_out($bad_color, .85)
        &:after
          @if $waa > 0
            $width: ($waa / 20.0) * $max_width * 1%
            width: $width
          @else
            $width: (abs($waa) / 20.0) * $max_width * 1%
            width: $width
            left: 100% - $width
            border-radius: 4px 0 0 4px
            background-color: fade_out($bad_color, .85)

    table#seasonal-stats .yr-#{year}.full-season-stat
      +year_bar(#{ss[:war]}, #{ss[:waa]})
