%table.upcoming-table
  %thead
    %tr
      %th
        Name
        %small (Hall Rating)
      %th Position
      %th Years
      %th
        %abbr{title: "Hall of Stats"} HOS
      %th
        %abbr{title: "Hall of Merit"} HOM
      %th
        %abbr{title: "Adam Darowski’s Personal Hall of Fame"} AD
  %tbody
    - pool.each do |ballot_player|
      %tr
        %th
          %a{href: player_path(ballot_player)}= ballot_player.name
          %small (#{ballot_player.hall_rating_rounded})
        %td= ballot_player.position.upcase
        %td
          #{ballot_player.first_year}–#{ballot_player.last_year}
        %td
          %span{title: "HOS: #{ballot_player.hos}", class: ballot_player.last_year > 2010 ? 'ineligible' : ballot_player.hos}= ballot_player.hos
        %td
          %span{title: "HOM: #{ballot_player.hom}", class: ballot_player.last_year > 2010 ? 'ineligible' : ballot_player.hom}= ballot_player.hom
        %td
          %span{title: "AD: #{ballot_player.personal_hof}", class: ballot_player.last_year > 2010 ? 'ineligible' : ballot_player.personal_hof}= ballot_player.personal_hof
