- content_for(:header_styles) do
  - @players.each do |player|
    = render partial: 'position/player_styles', locals: { player: player }

= render 'shared/header'

= render 'shared/search'

%header.title
  %h2 #{@position_name} Rankings

- if Position.find_by_id(@position)
  %figure.banner
    %img{:src => "/assets/photos/#{Position.find(@position).img}"}/
    %figcaption
      %a{:href => Position.find(@position).img_credit} Photo Credit

%nav.jump-menu
  %strong Jump to:
  %ol
    - ['p', 'c', '1b', '2b', '3b', 'ss', 'lf', 'cf', 'rf', 'dh'].each do |position|
      %li=link_to position.upcase, position_path(position)

%section#inductees
  %h2
    %a#show-filters{href: '#'}
      #{@players.count} Greatest #{@position_name.pluralize}
  #filters{style: 'display: none;'}
    %ul
      %li
        %a#show-all{href: '#position'}
          %span #{@players.count}
          Greatest #{@position_name.pluralize}
      %li
        %a#show-all{href: '#all'}
          %span #{Player.in_hos.of_position(@position).count}
          Hall of Stats Inductees
      %li
        %a#show-all{href: '#hof'}
          %span #{Player.in_hof.of_position(@position).count}
          Hall of Fame Inductees
      - non_position_filters.each do |key, text|
        %li
          - dash_key = key.to_s.gsub(/_/, '-')
          %a{id: "show-#{dash_key}", href: "##{dash_key}"}
            %span= Player.of_position(@position).send(key).count
            = text
  %ol.player-list
    - @players.each do |player|
      %li{id: safe_id(player.id), class: filter_data(player) + ['position']}
        = link_to player_path(player) do
          %strong
            #{player.name}
          %em #{player.years_played}
          %span
            - if player.hall_rating > 99.4 && player.hos == false && player.eligibility == "eligible"
              = player.hall_rating
            - else
              = player.hall_rating.round

%section#position-lists
  = top_five_list(@players, "Best #{@position_name.pluralize} Ever", 'best-ever')

  = top_five_list(@best_not_included, "Best Not in the Hall of Stats", 'best-not-hos')

  = top_five_list(@best_not_inducted, "Best Not in the Hall of Fame", 'best-not-hof')

  = top_five_list(@best_active, "Best Active #{@position_name.pluralize}", 'best-active')
  
  = top_five_list(@best_upcoming, 'Best Retired but Not Yet Eligible', 'best-retired')
